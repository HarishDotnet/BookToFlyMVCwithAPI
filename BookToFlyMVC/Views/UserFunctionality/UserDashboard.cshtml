    <!-- Contact Customer Care Section -->
    <div class="mt-5">
        <h4>Contact Customer Care</h4>
        <form method="post" asp-action="ContactCustomerCare" asp-controller="User">
            <div class="mb-3">
                <label for="subject" class="form-label">Subject:</label>
                <input type="text" id="subject" name="Subject" class="form-control" placeholder="Enter subject" required />
            </div>
            <div class="mb-3">
                <label for="message" class="form-label">Message:</label>
                <textarea id="message" name="Message" class="form-control" placeholder="Enter your message" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Send Message</button>
        </form>
    </div>
</div>

