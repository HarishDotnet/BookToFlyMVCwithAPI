@model BookToFlyMVC.Models.UserDashboardModel

@{
    ViewData["Title"] = "User Dashboard - Flight Booking";
}

<div class="container mt-5">
    <h2 class="text-center">@ViewData["Title"]</h2>
    <div class="row">
        <!-- Flight Search -->
        <div class="col-md-6">
            <div class="card shadow-sm p-4">
                <h4 class="text-center">Search Flights</h4>
                <form method="get" asp-action="SearchFlights">
                    <div class="mb-3">
                        <label for="flightNumber" class="form-label">Flight Number:</label>
                        <input type="text" id="flightNumber" name="FlightNumber" class="form-control" placeholder="Enter Flight Number" />
                    </div>
                    <h6 class="text-center">(OR)</h6>
                    <div class="mb-3">
                        <label for="fromPlace" class="form-label">From:</label>
                        <input type="text" id="fromPlace" name="FromPlace" class="form-control" placeholder="Enter Departure City" required />
                    </div>
                    <div class="mb-3">
                        <label for="toPlace" class="form-label">To:</label>
                        <input type="text" id="toPlace" name="ToPlace" class="form-control" placeholder="Enter Destination City" required />
                    </div>
                    <button type="submit" class="btn btn-primary d-block mx-auto">Search Flights</button>
                </form>
            </div>
        </div>

        <!-- User Booked Tickets -->
        <div class="col-md-6">
            <div class="card shadow-sm p-4">
                <h4 class="text-center">Your Booked Tickets</h4>
                @* <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Flight Number</th>
                            <th>From</th>
                            <th>To</th>
                            <th>Departure Time</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var ticket in Model.BookedTickets)
                        {
                            <tr>
                                <td>@ticket.FlightNumber</td>
                                <td>@ticket.FromPlace</td>
                                <td>@ticket.ToPlace</td>
                                <td>@ticket.DepartureTime</td>
                                <td>
                                    <a href="@Url.Action("CancelBooking", "Flight", new { id = ticket.Id })" class="btn btn-danger btn-sm">Cancel</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table> *@
            </div>
        </div>
    </div>

    <!-- Available Flights List -->
    @* @if (Model.Flights != null && Model.Flights.Any())
    {
        <div class="mt-5">
            <h4>Available Flights</h4>
            <table class="table table-bordered">
