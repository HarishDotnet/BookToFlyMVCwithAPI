@{
    ViewData["Title"] = "Admin Dashboard";
}
<nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
    <div class="container-fluid">
        <!-- Left Option Icon -->
        <div class="d-inline-block position-relative">
            <i class="bi bi-list text-light fs-3" id="leftOptionIcon" style="cursor: pointer;"></i>
        </div>

        <a class="navbar-brand text-warning" href="/Admin/Dashboard" style="margin-left: 20px;">
            <i class="bi bi-speedometer2 me-2"></i>Admin Dashboard
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown"
            aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ms-auto">
                <!-- Logout Button and Icon -->
                <li class="nav-item">
                    <a class="nav-link text-danger" href="/Home/Login">
                        <i class="bi bi-box-arrow-right me-2"></i>Logout
                    </a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<!-- Sidebar -->
<nav id="sideNav" class="position-fixed vh-100"
    style="width: 250px; background-color: rgba(32, 33, 36, 0.85); padding: 15px; border-right: 1px solid rgba(255, 255, 255, 0.2); top: 65px; left: 0; z-index: 1000; overflow-y: auto;">
    <h4 class="text-warning mb-4 border-bottom pb-2">Flight Management</h4>
    <ul>
        <li class="mb-3"><a href="/Flight/Create" class="text-decoration-none text-light"><i
                    class="bi bi-plus-circle me-2"></i>Add Flight</a></li>
        <li class="mb-3"><a href="/Flight/Update" class="text-decoration-none text-light"><i
                    class="bi bi-pencil-square me-2"></i>Edit Flight Details</a></li>
        <li class="mb-3"><a href="/Flight/Delete" class="text-decoration-none text-light"><i
                    class="bi bi-trash-fill me-2"></i>Delete Flight</a></li>
        <li class="mb-3"><a href="/Flight/SearchFlights"
                class="text-decoration-none text-light"><i class="bi bi-gear-fill me-2"></i>Search Flight</a></li>
    </ul>
</nav>

<script>
    const sideNav = document.getElementById('sideNav');
    const leftOptionIcon = document.getElementById('leftOptionIcon');

    // Toggle sidebar visibility when clicking the menu icon
    leftOptionIcon.addEventListener('click', function () {
        sideNav.classList.toggle('show'); // Toggle sidebar visibility
    });

    // Keep the sidebar open while hovering
    sideNav.addEventListener('mouseenter', function () {
        sideNav.classList.add('show');
    });

    // Hide the sidebar when the mouse leaves
    sideNav.addEventListener('mouseleave', function () {
        sideNav.classList.remove('show');
    });
</script>
