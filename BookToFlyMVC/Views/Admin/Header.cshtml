@{
    ViewData["Title"] = "Admin Dashboard";
}
<style>
    /* Sidebar Styling */
    #sideNav {
        transform: translateX(-100%);
        /* Initially hidden */
        transition: transform 0.3s ease;
        /* Smooth transition */
    }

    #sideNav.show {
        transform: translateX(0);
        /* Fully visible when toggled */
    }

    /* Navbar Styling */
    .navbar {
        background-color: rgba(32, 33, 36, 0.9);
        /* Darker navbar */
    }

    .navbar-brand {
        color: #ffdd57 !important;
        /* Bright yellow for brand to stand out */
    }

    .navbar-toggler-icon {
        background-color: #ffdd57;
        /* Make the toggle icon more visible */
    }

    /* User Profile Dropdown */
    .nav-item.dropdown .dropdown-menu {
        background-color: rgba(32, 33, 36, 0.85);
        /* Darker background for dropdown */
        border: 1px solid #444;
        /* Lighter border for contrast */
    }

    .nav-item.dropdown .dropdown-item {
        color: #f1f1f1;
        /* Lighter text */
    }

    .nav-item.dropdown .dropdown-item:hover {
        background-color: rgba(255, 255, 255, 0.1);
        /* Subtle hover effect */
    }
</style>
<script>
    const sideNav = document.getElementById('sideNav');
    const leftOptionIcon = document.getElementById('leftOptionIcon');

    // Toggle sidebar visibility when clicking the menu icon
    leftOptionIcon.addEventListener('click', function () {
        sideNav.classList.toggle('show'); // Toggle sidebar visibility
    });

    // Keep the sidebar open while hovering
    sideNav.addEventListener('mouseenter', function () {
        sideNav.classList.add('show');
    });

    // Hide the sidebar when the mouse leaves
    sideNav.addEventListener('mouseleave', function () {
        sideNav.classList.remove('show');
    });

</script>

