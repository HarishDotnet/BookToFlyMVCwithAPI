@{
    ViewData["Title"] = "Admin Dashboard";
    ViewData["RenderHeader"] = true;
}

@if (Context.Session.GetString("JWT_TOKEN") != null)
{
    <div>
        @await Html.PartialAsync("~/Views/Admin/Header.cshtml")
        <div class="vh-100 d-flex flex-column">
            <!-- Dashboard Content -->
            <div id="dashboardContent" class="flex-grow-1 d-flex main-content">
                <div class="container mt-4">
                    <h2 class="text-warning"><i class="bi bi-house-door-fill me-2"></i>Welcome, Admin!</h2>
                    <p class="text-muted">Use the navigation or quick actions below to manage the system.</p>

                    <!-- Example Quick Actions -->
                    <div class="row mt-4">
                        <div class="col-md-4">
                            <div class="card shadow-sm border-warning">
                                <div class="card-body text-center">
                                    <h5 class="card-title"><i class="bi bi-calendar-check-fill me-2"></i>Manage Flights</h5>
                                    <p class="card-text">View, add, or update flight schedules.</p>
                                    <a class="btn btn-success" href="#" data-bs-toggle="modal"
                                        data-bs-target="#flightTypeModal" class="text-decoration-none text-light">Select
                                        Flight Type</a>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="card shadow-sm border-success">
                                <div class="card-body text-center">
                                    <h5 class="card-title"><i class="bi bi-journal-medical me-2"></i>Add Flight</h5>
                                    <p class="card-text">Create Flight(International or Domestic).</p>
                                    <a href="/Flight/Create" class="btn btn-success">Go to Create</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card shadow-sm border-success">
                                <div class="card-body text-center">
                                    <h5 class="card-title"><i class="bi bi-keyboard me-2"></i>Modify Details</h5>
                                    <p class="card-text">Need Flight Modification?</p>
                                    <a href="/Flight/Update" class="btn btn-success">Go to Edit</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mt-3">
                            <div class="card shadow-sm border-success">
                                <div class="card-body text-center">
                                    <h5 class="card-title"><i class="bi bi-trash2-fill me-2"></i>Remove Flight</h5>
                                    <p class="card-text">Remove Flight Details That you wish.</p>
                                    <a href="/Flight/Delete" class="btn btn-success">Go to Delete</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mt-3">
                            <div class="card shadow-sm border-success">
                                <div class="card-body text-center">
                                    <h5 class="card-title"><i class="bi bi-binoculars me-2"></i>View Flight</h5>
                                    <p class="card-text">Get Flight Detail as you wish.</p>
                                    <a href="/Flight/SearchFlights" class="btn btn-success">Go to Search</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mt-3">
                            <div class="card shadow-sm border-success">
                                <div class="card-body text-center">
                                    <h5 class="card-title"><i class="bi bi-ticket-perforated-fill me-2"></i>Show Tickets</h5>
                                    <p class="card-text">View the Ticket Booked by users.</p>
                                    <a href="/Booking/ShowBooking" class="btn btn-success">View Tickets</a>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <!-- Modal -->
        <div class="modal fade" id="flightTypeModal" tabindex="-1" aria-labelledby="flightTypeModalLabel"
            aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <!-- Modal Header -->
                    <div class="modal-header bg-dark text-light">
                        <h5 class="modal-title" id="flightTypeModalLabel"><i class="bi bi-funnel-fill me-2"></i>Select
                            Flight Type</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>

                    <!-- Modal Body -->
                    <div class="modal-body">
                        <form id="flightTypeForm" asp-controller="Flight" asp-action="ManageFlights" method="post">
                            <div class="mb-3">
                                <label for="flightType" class="form-label">Flight Type</label>
                                <select class="form-select" id="flightType" name="FlightType" required>
                                    <option value="" selected disabled>Select an option</option>
                                    <option value="International">International</option>
                                    <option value="Domestic">Domestic</option>
                                </select>
                            </div>
                            <div class="text-end">
                                <button type="submit" class="btn btn-success"><i
                                        class="bi bi-check-circle me-2"></i>Select</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    @await Html.PartialAsync("~/Views/Home/Login.cshtml")
}
