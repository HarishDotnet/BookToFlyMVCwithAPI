@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid p-0">
    <!-- Top Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
        <div class="container">
            <a class="navbar-brand" href="#">Admin Dashboard</a>
            <div class="d-flex">
                <a href="/Admin/Profile" class="btn btn-link me-3">Profile</a>
                <a href="/Admin/Logout" class="btn btn-danger">Logout</a>
            </div>
        </div>
    </nav>

    <!-- Dashboard Content -->
    <div class="container mt-4">
        <h2>Welcome, Admin!</h2>
        <p class="text-muted">Use the navigation or quick actions below to manage the system.</p>

        <!-- Example Quick Actions -->
        <div class="row mt-4">
            <div class="col-md-4">
                <div class="card shadow-sm">
                    <div class="card-body text-center">
                        <h5 class="card-title">Manage Flights</h5>
                        <p class="card-text">View, add, or update flight schedules.</p>
                        <a asp-controller="Admin" asp-action="ManageFlights" class="btn btn-primary">Go to Flights</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-sm">
                    <div class="card-body text-center">
                        <h5 class="card-title">Manage Users</h5>
                        <p class="card-text">View and manage user accounts.</p>
                        <a href="/Admin/Users" class="btn btn-primary">Go to Users</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-sm">
                    <div class="card-body text-center">
                        <h5 class="card-title">View Reports</h5>
                        <p class="card-text">Analyze system usage and flight bookings.</p>
                        <a href="/Admin/Reports" class="btn btn-primary">View Reports</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
